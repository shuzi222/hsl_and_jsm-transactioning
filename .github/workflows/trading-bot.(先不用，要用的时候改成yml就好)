name: Trading Bot

on:
  schedule:
    - cron: '0 * * * *'  # 每小时运行
  workflow_dispatch:  # 支持手动触发

jobs:
  trade:
    runs-on: ubuntu-latest
    env:
      OKX_API_KEY: ${{ secrets.OKX_API_KEY }}
      OKX_API_SECRET: ${{ secrets.OKX_API_SECRET }}
      OKX_PASSPHRASE: ${{ secrets.OKX_PASSPHRASE }}
      OKX_FLAG: '0'  # 实盘，设为 '1' 用于模拟盘
    steps:
      - uses: actions/checkout@v3
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'
      - name: Install dependencies
        run: |
          pip install python-okx pandas numpy python-ta-lib
      - name: Run trading bot
        run: python trading_bot.py
